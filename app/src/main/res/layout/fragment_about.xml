<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".fragments.AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/titleAbout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="@font/righteous"
        android:text="About Us"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/titlePartnership"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="@font/righteous"
        android:text="Partnership"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/showCompany"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="30dp"
        android:text="Develop By: Serious4Gamers Company"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAbout" />

    <TextView
        android:id="@+id/showCContact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="164dp"
        android:paddingLeft="20dp"
        android:text="Contact    : 012-3456789"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAbout" />

    <TextView
        android:id="@+id/showCEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:text="Email        : serious4gamers@gmail.com"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showCContact" />

    <ImageView
        android:id="@+id/imgCompany"
        android:layout_width="188dp"
        android:layout_height="185dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/companylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/showCEmail"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgPartnership"
        android:layout_width="171dp"
        android:layout_height="135dp"
        android:src="@drawable/charitylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlePartnership" />

    <TextView
        android:id="@+id/showPContact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:paddingLeft="20dp"
        android:text="Contact : 012-9876543"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlePartnership" />

    <TextView
        android:id="@+id/showPEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:text="Email     : donationforeveryone@gmail.com"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showPContact" />

</androidx.constraintlayout.widget.ConstraintLayout>