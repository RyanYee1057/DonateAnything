<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleCert"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:fontFamily="@font/righteous"
        android:text="View Certificate"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/titleCert"
        app:layout_constraintEnd_toStartOf="@+id/titleCert"
        app:layout_constraintTop_toTopOf="@+id/titleCert"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="265dp"
        android:layout_height="179dp"
        app:layout_constraintEnd_toEndOf="@+id/titleCert"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="@+id/titleCert"
        app:layout_constraintTop_toBottomOf="@+id/titleCert"
        app:srcCompat="@drawable/charitylogo" />

    <TextView
        android:id="@+id/tvIsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:paddingLeft="30dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCert" />

    <TextView
        android:id="@+id/showName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:text="User Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIsName" />

    <TextView
        android:id="@+id/tvDonation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:paddingLeft="30dp"
        android:text="Donation"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCert" />

    <TextView
        android:id="@+id/showDonation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="30dp"
        android:text="Donation Details"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDonation" />

    <TextView
        android:id="@+id/showLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="------------------------------------------------------"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDonation" />

    <TextView
        android:id="@+id/tvThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="408dp"
        android:text="Thanks For Helping !!!"
        android:textColor="#2AFF78"
        android:textColorHighlight="#FF0000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCert" />

    <TextView
        android:id="@+id/showDate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="236dp"
        android:paddingLeft="30dp"
        android:text="Date"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIsName" />

    <TextView
        android:id="@+id/tvCeoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hui Jun Yoong  "
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCeoName2" />

    <TextView
        android:id="@+id/tvCeoName2"
        android:layout_width="198dp"
        android:layout_height="47dp"
        android:layout_marginTop="484dp"
        android:fontFamily="@font/righteous"
        android:text="JY"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="38sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCert" />

    <TextView
        android:id="@+id/showPositions"
        android:layout_width="414dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:paddingRight="10dp"
        android:text="CEO of Donation\n For Everyone Charity"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCeoName" />

</androidx.constraintlayout.widget.ConstraintLayout>