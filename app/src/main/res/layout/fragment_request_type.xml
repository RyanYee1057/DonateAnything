<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/donationType"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor">
    tools:context=".fragments.RequestTypeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="134dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/righteous"
            android:text="Submit"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.942"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reason2" />

        <ImageView
            android:id="@+id/backBtn2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/donationTypetxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/donationTypetxt"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/donationTypetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/righteous"
            android:text="Donation Type"
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backBtn2"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/dailySupply"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/righteous"
            android:text="Daily Supply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donationTypetxt" />

        <CheckBox
            android:id="@+id/money"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/righteous"
            android:text="Money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dailySupply" />

        <CheckBox
            android:id="@+id/foodDrink"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/righteous"
            android:text="Food Drink"
            app:layout_constraintBottom_toBottomOf="@+id/dailySupply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/dailySupply"
            app:layout_constraintTop_toTopOf="@+id/dailySupply"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/other"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/righteous"
            android:text="Other"
            app:layout_constraintBottom_toBottomOf="@+id/money"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/dailySupply"
            app:layout_constraintTop_toBottomOf="@+id/foodDrink" />

        <EditText
            android:id="@+id/reason2"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:fontFamily="@font/righteous"
            android:hint="Specified the donation that you want"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>